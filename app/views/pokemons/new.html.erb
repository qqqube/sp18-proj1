<%= simple_form_for @pokemon, url: trainer_path(id: current_trainer.id) do |f| %>
  Pokemon's name: <%= f.input :name %>


  <%= f.collection_radio_buttons(:ndex, (1..649).map {|ndex| [ndex, ndex]}, :first, :last) do |b| %>
	  <div class="pokemon-choice-container">
	    <%= b.label { image_tag("pokemon/#{b.text}.png") + b.radio_button } %>
	  </div>
	  <% end %>
	<%= f.button :submit, class: "create-pokemon-btn" %>

<% end %>


